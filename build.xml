    <exec executable="sed" output="${webappTargetDir}/WEB-INF/assets.md5.trimmed">
      <arg line="s:${webappTargetDir}/:: ${webappTargetDir}/WEB-INF/assets.md5"/>
    </exec>
    -->

    <!-- swap columns and use ": " as separator to use as a properties file -->
